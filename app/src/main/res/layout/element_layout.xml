<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/articleTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/articleSectionNameTxt"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="TextView"
                style="@style/text"
                android:layout_below="@+id/articleTitleTxt"
               />

            <TextView
                android:id="@+id/articleAuthorTxt"
                android:layout_width="wrap_content"
                tools:text="TextView"
                style="@style/text"
                android:layout_below="@+id/articleDateTxt"/>

            <TextView
                android:id="@+id/articleDateTxt"
                android:layout_width="wrap_content"
                tools:text="TextView"
                style="@style/text"
                android:layout_below="@+id/articleSectionNameTxt"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>